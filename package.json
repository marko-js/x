{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "build:types": "npm run -ws build:types",
    "change": "changeset add",
    "ci:test": "c8 npm test -- --forbid-only",
    "format": "npm run lint:eslint -- --fix && npm run lint:prettier -- --write && npm run format:package-json",
    "format:package-json": "sort-package-json './{,packages/*/}package.json'",
    "lint": "npm run build:types && npm run lint:eslint && npm run lint:prettier -- -l && npm run lint:package-json",
    "lint:eslint": "eslint -f visualstudio .",
    "lint:package-json": "npm run format:package-json --check",
    "lint:prettier": "prettier '**/*{.ts,.js,.json,.md,.yml,rc}'",
    "prepare": "husky install",
    "report": "open ./coverage/lcov-report/index.html",
    "size": "npm run -ws build:js && tsx ./scripts/sizes.mts",
    "test": "mocha './packages/*/src/**/__tests__/*.test.ts'",
    "test:inspect": "npm test -- --inspect",
    "test:update": "npm test -- --update"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@marko/compiler": "^5.27.9",
    "@rollup/plugin-terser": "^0.4.2",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.7",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "c8": "^7.13.0",
    "chalk": "^5.2.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jsdom": "^22.0.0",
    "jsdom-context-require": "^4.0.8",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "mocha-snap": "^5.0.0",
    "prettier": "^2.8.8",
    "pretty-format": "^29.5.0",
    "rollup": "^3.21.8",
    "rollup-plugin-hypothetical": "^2.1.1",
    "sort-package-json": "^2.4.1",
    "table": "^6.8.1",
    "tiny-glob": "^0.2.9",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  }
}
