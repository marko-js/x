{
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/helper-module-imports": "^7.0.0",
    "@babel/node": "^7.6.1",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.2.0",
    "@ebay/browserslist-config": "^1.0.1",
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "cross-env": "^6.0.0",
    "dot-json": "^1.1.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "it-fails": "^1.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "build": "lerna exec --parallel -- babel ./src --out-dir ./dist --delete-dir-on-start --copy-files --config-file ../../babel.config.js --source-maps-inline",
    "build:watch": "npm run build -- --watch",
    "ci:codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "ci:test": "cross-env NODE_ENV=test nyc --reporter=text npm run mocha",
    "clean": "lerna clean && rm -rf ./packages/*/dist",
    "format": "prettier \"**/*.{json,md,js}\" --write",
    "lint": "eslint -f visualstudio packages/",
    "mocha": "mocha -r @babel/register packages/*/test/*.test.js",
    "mocha:watch": "npm run mocha -- --recursive --watch",
    "marko-test": "NEW_MARKO_COMPILER=1 npx mocha -r @babel/register packages/marko/test/**/*.test.js",
    "postinstall": "lerna bootstrap --hoist --no-ci",
    "set-entry": "lerna exec -- dot-json package.json main $\\(dot-json package.json $ENTRY\\)",
    "prerelease": "ENTRY=main:npm npm run set-entry",
    "postrelease": "ENTRY=main:dev npm run set-entry",
    "release": "npm run build && lerna publish",
    "report": "open ./coverage/lcov-report/index.html",
    "test": "cross-env NODE_ENV=test nyc npm run mocha"
  }
}
