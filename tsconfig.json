{
  "exclude": ["**/dist"],
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2017",
    "composite": true,
    "declaration": true,
    "stripInternal": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true
  }
}
